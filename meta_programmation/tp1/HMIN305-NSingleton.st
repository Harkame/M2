Object subclass: #NSingletonObject	instanceVariableNames: 'aName'	classVariableNames: ''	poolDictionaries: ''	category: 'HMIN305-NSingleton'!!NSingletonObject methodsFor: 'initialization' stamp: 'harkame 10/12/2018 11:22'!initialize: pName	aName := pName.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!NSingletonObject class	instanceVariableNames: 'aInstancesCounter aMaximumInstances'!!NSingletonObject class methodsFor: 'initialization' stamp: 'harkame 10/12/2018 11:24'!initialize: pMaximumInstances	aInstancesCounter := 0.	aMaximumInstances := pMaximumInstances.! !!NSingletonObject class methodsFor: 'instance creation' stamp: 'harkame 10/12/2018 11:27'!new: pName	aInstancesCounter = aMaximumInstances	ifTrue:	[		self error: 'Maximum instances reached#'.	]	ifFalse:	[		|newInstance|				newInstance := super new.				newInstance initialize: pName.				aInstancesCounter := aInstancesCounter + 1.				^newInstance	]! !!NSingletonObject class methodsFor: 'instance creation' stamp: 'harkame 10/12/2018 11:45'!new.	^ self new: #unknow.! !