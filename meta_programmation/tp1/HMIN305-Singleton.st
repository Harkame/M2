Object subclass: #SingletonObject	instanceVariableNames: 'aName'	classVariableNames: ''	poolDictionaries: ''	category: 'HMIN305-Singleton'!!SingletonObject methodsFor: 'initialization' stamp: 'harkame 10/12/2018 11:07'!initialize: pName	aName = pName.! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!SingletonObject class	instanceVariableNames: 'aLocker'!!SingletonObject class methodsFor: 'initialization' stamp: 'harkame 10/12/2018 11:17'!initialize	aLocker := False.! !!SingletonObject class methodsFor: 'instance creation' stamp: 'harkame 10/12/2018 11:19'!new: pName	aLocker = False	ifTrue:	[		|newInstance|				newInstance := super new.				newInstance initialize: pName.				aLocker := true.				^newInstance.	]	ifFalse:	[		self error: 'Singleton already declared'	]! !!SingletonObject class methodsFor: 'instance creation' stamp: 'harkame 10/12/2018 11:05'!new	self new: #unknow.! !SingletonObject initialize!